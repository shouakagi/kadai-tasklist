<h1>タスク一覧</h1>

<% if logged_in? %>
    <% render 'tasks/logged_in' %>
<% else %>
    <%= render 'tasks/not_logged_in' %>
<% end %>

<ul>
    <% @tasks.each do |task| %>
    <li><%= link_to task.id, task %> : <%= task.status %> &gt;<%= task.content %></li>
    <% end %>
</ul>

<%= link_to '新規タスクの投稿', new_task_path %>


